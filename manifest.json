{
  "manifest_version": 2,

  "name": "ProcrastiCoach",
  "description": "This extension will coach you to help stop procrastination.",
  "version": "1.0",

  "background": {
    "scripts": [
      "background-listener.js"
    ],
    "persistent": false
  },

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },

  "permissions": [
    "storage", "activeTab", "tabs"
   ]
}
